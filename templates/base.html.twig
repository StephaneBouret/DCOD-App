<!DOCTYPE html>
<html lang="fr">

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Dis, comment on dit ?
		{% endblock %}
	</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description"
		content="Association éditrice d'imagiers auprès des maternelles - acquisition des fondamentaux, du vocabulaire et des bases indispensables de la syntaxe">
	<meta name="robots" content="index, follow">
	<link
		href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap"
		rel="stylesheet">
	<link
		href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
		rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

	<!-- Styles CSS -->
	{{ encore_entry_link_tags('app') }}

	<!-- Favicons -->
	<link rel="apple-touch-icon" sizes="57x57" href="{{ asset('assets/img/favicon/apple-icon-57x57.png') }}">
	<link rel="apple-touch-icon" sizes="60x60" href="{{ asset('assets/img/favicon/apple-icon-60x60.png') }}">
	<link rel="apple-touch-icon" sizes="72x72" href="{{ asset('assets/img/favicon/apple-icon-72x72.png') }}">
	<link rel="apple-touch-icon" sizes="76x76" href="{{ asset('assets/img/favicon/apple-icon-76x76.png') }}">
	<link rel="apple-touch-icon" sizes="114x114" href="{{ asset('assets/img/favicon/apple-icon-114x114.png') }}">
	<link rel="apple-touch-icon" sizes="120x120" href="{{ asset('assets/img/favicon/apple-icon-120x120.png') }}">
	<link rel="apple-touch-icon" sizes="144x144" href="{{ asset('assets/img/favicon/apple-icon-144x144.png') }}">
	<link rel="apple-touch-icon" sizes="152x152" href="{{ asset('assets/img/favicon/apple-icon-152x152.png') }}">
	<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/img/favicon/apple-icon-180x180.png') }}">
	<link rel="icon" type="image/png" sizes="192x192" href="{{ asset('assets/img/favicon/android-icon-192x192.png') }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/img/favicon/favicon-32x32.png') }}">
	<link rel="icon" type="image/png" sizes="96x96" href="{{ asset('assets/img/favicon/favicon-96x96.png') }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('assets/img/favicon/favicon-16x16.png') }}">
	<link rel="manifest" href="{{ asset('assets/img/favicon/manifest.json') }}">
	<link rel="icon" href="{{ asset('assets/img/favicon/favicon.ico') }}">
	<meta name="msapplication-TileImage" content="{{ asset('assets/img/favicon/ms-icon-144x144.png') }}">
	<meta name="theme-color" content="#7952b3"> {% block stylesheets %}{% endblock %}
	{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.6.0.js"
		integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous">
	</script>
	<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
	<script src="{{ asset('assets/js/login.js') }}"></script>
	{{ encore_entry_script_tags('fontawesome') }}
	{% endblock %}
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-darkness fixed-top">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">
					<img src="{{ asset('assets/img/logo1.png') }}" alt="Logo Image" class="logoImg">
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
					aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarCollapse">
					<ul class="navbar-nav me-auto mb-2 mb-md-0">
						{% if is_granted('IS_ANONYMOUS') %}
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'about' ? 'active' }}"
								aria-current="page" href="{{ path('about') }}">Qui nous sommes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'picture_book' ? 'active' }}"
								aria-current="page" href="{{ path('picture_book') }}">Nos imagiers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'app_login' ? 'active' }}"
								aria-current="page" href="{{ path('application') }}">Se connecter</a>
						</li>
						{% endif %}
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'products' ? 'active' }}"
								aria-current="page" href="{{ path('products') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'category_filter' ? 'active' }}"
								href="/categories">Thématiques</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'mylist' ? 'active' }}"
								href="/ma-liste">Ma liste</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'glossary' ? 'active' }}"
								href="/index-des-imagiers">
								<i class="fas fa-indent"></i>
								Index</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'game_files' ? 'active' }}"
								href="/jeux-de-langage">
								<i class="fas fa-dice"></i>
								Jeux</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'blogpost' ? 'active' }}" href="/blog">
								<i class="fad fa-comments"></i>
								Blog</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('support') }}">
								<i class="icon-app icon-question"></i>
								Aide</a>
						</li>
						{% endif %}
						{% if is_granted('IS_ANONYMOUS') %}
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'pricing' ? 'active' }}"
								aria-current="page" href="{{ path('pricing') }}">Tarifs</a>
						</li>
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'support_us' ? 'active' }}"
								aria-current="page" href="{{ path('support_us') }}">Nous soutenir</a>
						</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link {{ app.request.get('_route') == 'contact' ? 'active' }}"
								aria-current="page" href="{{ path('contact') }}">Contact</a>
						</li>
					</ul>
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<ul class="navbar-nav">
						<li class="nav-item dropdown red">
							<a class="nav-link dropdown-toggle red" href="#" id="navbarDropdownMenuLink" role="button"
								data-bs-toggle="dropdown" aria-expanded="false">
								<i class="far fa-user"></i>
							</a>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
								{% if app.user %}
								<li>
									<a class="dropdown-item" href="{{ path('account') }}">Profil
										<small>({{ app.user.firstname }})</small>
									</a>
								</li>
								<div class="dropdown-divider"></div>
								<li>
									<a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
								</li>
								{% else %}
								<li>
									<a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a>
								</li>
								{% endif %}
							</ul>
						</li>
					</ul>
					{% endif %}
					{% if is_granted('ROLE_ADMIN') %}
					<ul class="navbar-nav">
						<li class="nav-item px-2">
							<a href="/admin" class="red">
								<i class="fas fa-users-cog"></i>
							</a>
						</li>
						<li class="nav-item px-2">
							<a href="/creation-utilisateur" class="red">
								<i class="fas fa-registered"></i>
							</a>
						</li>
					</ul>
					{% endif %}
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<div class="d-flex">
						<button class="btn btn-sm btn-outline-danger mx-2 searchTab" type="button"
							data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false"
							aria-controls="collapseExample">
							<span class="icon-search">
								<i class="fas fa-search"></i>
							</span>
						</button>
						<div class="collapse" id="collapseExample">
							<form method="POST" action="{{ path('search') }}" class="form-inline my-1 my-lg-0">
								<input class="form-control mr-sm-2" type="search" placeholder="Votre recherche"
									aria-label="Search" name="search">
							</form>
						</div>
					</div>
					{% endif %}
					{% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') and not is_granted('IS_AUTHENTICATED_FULLY') %}
					<a href="{{ path('cart') }}">
						<img src="{{ asset('assets/img/shopping-cart.png') }}" class="cart-icon" alt="Mon panier">
					</a>
					{% endif %}
				</div>
			</div>
		</nav>
	</header>
	{% block body %}{% endblock %}
</body>

</html>